generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  AVAILABLE
  CLAIMED
}

model Coupon {
  id     Int    @id @default(autoincrement())
  code   String @unique
  status Status @default(AVAILABLE)

  claims Claim[] // ðŸ‘ˆ This creates a one-to-many relation (Coupon â†’ Claims)
}

model Claim {
  id        Int      @id @default(autoincrement())
  couponId  Int
  ipAddress String
  sessionId String
  claimedAt DateTime @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id])
}
